<article class="xviews xchallenges xindex">
<div class="views scorboards scoreboard_challenges">
	<h1>Challenges</h1>
	<% @challenges.each do |challenge| %>
	<h3><%= challenge.title %></h3>
	<form action="/scoreboards/<%=@scoreboard.id%>/challenges/<%=challenge.id%>">
		<input type="button" value="Read Instructions"class="release-checkbox"> <br>
		<% challenge.releases.times do |i| %>
		<input type="button" value="Release <%=i%>" class="release-checkbox"> <br>
		<% end %>
		<input type="button" value="Make Pull Request" class="release-checkbox">  <br>
	</form>
	<% end %>
</div>
</article>
